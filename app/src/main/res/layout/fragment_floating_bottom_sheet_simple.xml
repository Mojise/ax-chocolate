<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="text"
            type="java.lang.String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_gravity="bottom">

        <View
            android:layout_width="42dp"
            android:layout_height="5dp"
            android:background="@drawable/bg_bottom_sheet_grip_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_grip_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_grip_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="24dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/guideline_grip_bar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:gravity="center"
                tools:text="테스트"
                android:text="@{text}"/>

            <com.mojise.library.chocolate.view.ChocolateTextView
                android:id="@+id/btn_test_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:text="버튼 테스트 1"
                android:textSize="18sp"/>

            <com.mojise.library.chocolate.view.ChocolateTextView
                android:id="@+id/btn_test_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:text="버튼 테스트 2"
                android:textSize="18sp"/>

            <com.mojise.library.chocolate.view.ChocolateTextView
                android:id="@+id/btn_test_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                android:text="버튼 테스트 3"
                android:textSize="18sp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>