<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:orientation="vertical"
            android:gravity="center">

            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:chocolate_BoxButton_IconPosition="right"
                app:chocolate_BoxButton_BackgroundColor="@color/chocolate_green600"
                app:chocolate_BoxButton_Gravity="start"
                app:chocolate_BoxButton_ChainStyle="spread_inside"
                app:chocolate_BoxButton_Text="초콜릿 버튼 abcd efg qqq"
                app:chocolate_BoxButton_Icon="@drawable/icon_lock"/>


            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:paddingVertical="8dp"
                app:chocolate_BoxButton_Text="초콜릿 버튼 입니다 1"
                app:chocolate_BoxButton_TextSize="20sp"/>

            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_test_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:chocolate_BoxButton_Text="누르면 disabled"
                app:chocolate_BoxButton_TextPaddingBottom="1dp"
                app:chocolate_BoxButton_Gravity="center"
                app:chocolate_BoxButton_ChainStyle="spread"
                app:chocolate_BoxButton_Icon="@drawable/icon_lock"
                app:chocolate_BoxButton_IconPosition="left"
                app:chocolate_BoxButton_IconPadding="3dp"/>

            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_only_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chocolate_BoxButton_IconSize="20dp"
                app:chocolate_BoxButton_Icon="@drawable/icon_lock"/>

            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:padding="16dp"
                app:chocolate_BoxButton_BackgroundColor="@color/my_box_button_background_color"
                app:chocolate_BoxButton_BackgroundCornerRadius="8dp"
                app:chocolate_BoxButton_Text="초콜릿 버튼 입니다 2"
                app:chocolate_BoxButton_TextSize="20sp"
                app:chocolate_BoxButton_TextStyle="bold"
                app:chocolate_BoxButton_FontFamily="@font/chocolate_s_core_dream_6_bold"
                app:chocolate_BoxButton_TextColor="@color/white"
                app:chocolate_BoxButton_IconSize="40dp"
                app:chocolate_BoxButton_IconPadding="1dp"
                app:chocolate_BoxButton_Icon="@drawable/chocolate_icon_shield"
                app:chocolate_BoxButton_IconTint="@color/white"/>
            
            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_spread_inside"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:chocolate_BoxButton_ChainStyle="spread_inside"
                app:chocolate_BoxButton_Icon="@drawable/chocolate_icon_shield"
                app:chocolate_BoxButton_Text="초콜릿 버튼 Spread"/>

            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_simple2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:chocolate_PressEffectStrengthLevel="deep"
                app:chocolate_BoxButton_BackgroundColor="@color/chocolate_green400"
                app:chocolate_BoxButton_Text="초콜릿 버튼 입니다!!"
                app:chocolate_BoxButton_TextColor="@color/black"
                app:chocolate_BoxButton_FontFamily="@font/chocolate_s_core_dream_6_bold"
                app:chocolate_BoxButton_Icon="@drawable/chocolate_icon_shield"
                app:chocolate_BoxButton_IconTint="@color/chocolate_black"/>

            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_gradient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:background="@drawable/bg_gradient"
                app:chocolate_BoxButton_Text="그라디언트 버튼"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                    android:id="@+id/btn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="12dp"
                    app:chocolate_BoxButton_Text="전송"
                    app:chocolate_BoxButton_TextSize="14sp"
                    app:chocolate_BoxButton_BackgroundCornerRadius="8dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.mojise.library.chocolate.button.box.ChocolateBoxButton
                android:id="@+id/box_button_enabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                app:chocolate_BoxButton_Text="버튼 disabled 모두 해제"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
</layout>