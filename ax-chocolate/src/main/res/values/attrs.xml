    <!-- 모서리 둥근 정도 크기 -->
    <attr name="chocolateCornerRadius" format="dimension"/>
    <!-- Ripple 색상 -->
    <attr name="chocolateRippleColor" format="color"/>
    <attr name="chocolateRippleSelectedColor" format="color"/>
    <attr name="chocolateRippleApplyTo" format="enum">
        <!-- Ripple 효과를 표시할 위치 (default=foreground) -->
        <enum name="foreground" value="0"/>
        <enum name="background" value="1"/>
    </attr>
    <!-- 배경 색상 -->
    <attr name="chocolateBackgroundColor" format="color"/>
    <attr name="chocolateBackgroundDisabledColor" format="color"/>
    <attr name="chocolateBackgroundSelectedColor" format="color"/>
