    <attr name="chocolateStrokeDisabledColor" format="color"/>
    <attr name="chocolateStrokeSelectedColor" foramt="color"/>
    <!-- 뷰 터치 시, 눌림 애니메이션 효과 (scale down 크기) -->
    <attr name="chocolatePressEffectEnabled" format="boolean"/> <!-- 눌림 효과 사용 여부 (default=true) -->
    <attr name="chocolatePressEffectScaleRatio" format="float"/>
    <attr name="chocolatePressEffectStrengthLevel" format="enum">
        <enum name="light_tiny"    value="0"/> <!-- scale=0.98 : 눌림 효과 매우 작음 -->
        <enum name="light"         value="1"/> <!-- scale=0.96 : 눌림 효과 작음 -->
        <enum name="normal"        value="2"/> <!-- scale=0.94 : 눌림 효과 적당함 (default) -->
        <enum name="heavy"         value="3"/> <!-- scale=0.92 : 눌림 효과 큼 -->
        <enum name="heavy_strong"  value="4"/> <!-- scale=0.90 : 눌림 효과 매우 큼 -->
        <enum name="heavy_extreme" value="5"/> <!-- scale=0.85 : 눌림 효과 매우 상당히 큼 -->
    </attr>

