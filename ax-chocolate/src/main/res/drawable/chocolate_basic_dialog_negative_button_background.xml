    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/chocolate_ripple_color_light"/>
            <corners android:radius="@dimen/chocolate_dialog_button_corner_radius"/>
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/chocolate_dialog_negative_button_background"/>
